<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vk_white"
    tools:context="com.example.root.vkcoffee.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="45dp"></android.support.v7.widget.RecyclerView>

    <com.example.root.vkcoffee.jsplayer.JcPlayerExceptions.JcPlayerView
        android:id="@+id/jcplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </com.example.root.vkcoffee.jsplayer.JcPlayerExceptions.JcPlayerView>


    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vk_white"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></WebView>

    <RelativeLayout
        android:id="@+id/rel.new"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/av_default_border"
        android:padding="32dp"
        android:visibility="gone">


        <Button
            android:id="@+id/btn.new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@color/act"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="Скачать"
            android:textColor="@color/av_default_border"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Данное приложение заблокировано. Скачать новую версию можно, нажав на кнопку СКАЧАТЬ."
            android:textColor="@color/vk_black"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>
